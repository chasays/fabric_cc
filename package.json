{
  "name": "parabank-automation-framework",
  "version": "1.0.0",
  "description": "E2E Test Automation Framework for Parabank Application",
  "scripts": {
    "test:ui": "playwright test tests/ui --reporter=allure-playwright",
    "test:api": "playwright test tests/api --reporter=allure-playwright",
    "test:e2e": "playwright test tests/e2e --reporter=allure-playwright",
    "test:all": "playwright test --reporter=allure-playwright",
    "report": "allure serve allure-results --port 5050 --host 0.0.0.0",
    "format": "prettier --write src tests"
  },
  "dependencies": {
    "@faker-js/faker": "^8.0.0",
    "@playwright/test": "^1.40.0",
    "allure-playwright": "^2.9.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "eslint": "^9.33.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^24.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "allure-commandline": "^2.34.1",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  }
}
